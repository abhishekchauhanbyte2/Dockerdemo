<div class="container-fluid">
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex align-items-center justify-content-center h-100">
                <div class="col-md-8 col-lg-7 col-xl-6">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                        class="img-fluid" alt="Phone image">
                </div>
                <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                    <form action="/users/login" method="post">
                        <!-- Email input -->
                        <div class="form-group form-outline mb-4">
                            <label class="form-label" for="form1Example13">Email address</label>
                            <input type="email" id="form1Example13" class="form-control form-control-lg" name="email"
                                required />
                            <!-- <small *ngIf="email?.invalid && email?.touched" class="text-danger">Email
                                    Required</small> -->
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="form1Example23">Password</label>
                            <input type="password" id="form1Example23" class="form-control form-control-lg"
                                name="password" required />
                            <!-- <small *ngIf="password?.invalid && password?.touched" class="text-danger">Password
                                    Required</small> -->
                        </div>

                        <div>
                            <strong>Login As :</strong>
                            <!-- Group of default radios - option 1 -->
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" id="defaultGroupExample1"
                                    value="Teacher" name="type">
                                <label class="custom-control-label" for="defaultGroupExample1">Teacher</label>
                            </div>

                            <!-- Group of default radios - option 2 -->
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" id="defaultGroupExample2"
                                    value="Student" name="type">
                                <label class="custom-control-label" for="defaultGroupExample2">Student</label>
                            </div>
                            <!-- <small *ngIf="loginForm.get('type').invalid && loginForm.get('type').touched" class="text-danger">Required</small> -->
                        </div>
                        <br><br>

                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Sign in</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

</div>